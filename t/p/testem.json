{
  "before_tests": "tarima -fqe test -x demos",
  "test_page": "tests/index.html",
  "framework": "qunit",
  "src_files": [
    "src/**/*.js",
    "tests/**/*.index.html"
  ],
  "serve_files": [
    "dist/pulltorefresh.js",
    "tests/tests.js"
  ],
  "growl": true,
  "launch_in_dev": [
    "Chrome",
    "PhantomJs"
  ],
  "launch_in_ci": [
    "PhantomJs"
  ],
  "browser_args": {
    "Chrome": [
      "--auto-open-devtools-for-tabs"
    ]
  }
}
